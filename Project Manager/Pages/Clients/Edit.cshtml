@page "{id:int}"
@model Project_Manager.Pages.Clients.EditModel
@{
    ViewData["Title"] = "Edit Client";
}

<link rel="stylesheet" href="~/css/Clients/edit.css" />

<div class="container mt-4">
    <h2 class="mb-4">Edit Client</h2>

    <form method="post" class="row g-3">
        <input type="hidden" asp-for="Client.Id" />

        <div class="col-md-6">
            <label asp-for="Client.Fname" class="form-label">First Name</label>
            <input asp-for="Client.Fname" class="form-control" required />
            <span asp-validation-for="Client.Fname" class="text-danger small"></span>
        </div>
        
        <div class="col-md-6">
            <label asp-for="Client.Lname" class="form-label">Last Name</label>
            <input asp-for="Client.Lname" class="form-control" required />
            <span asp-validation-for="Client.Lname" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Client.Email" class="form-label">Email</label>
            <input asp-for="Client.Email" class="form-control" type="email" required />
            <span asp-validation-for="Client.Email" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Client.PhoneNum" class="form-label">Phone Number</label>
            <input asp-for="Client.PhoneNum" class="form-control" />
            <span asp-validation-for="Client.PhoneNum" class="text-danger small"></span>
        </div>

        <div class="col-12">
            <label asp-for="Client.Company" class="form-label">Company</label>
            <input asp-for="Client.Company" class="form-control" />
            <span asp-validation-for="Client.Company" class="text-danger small"></span>
        </div>

        <div class="col-12 d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="/Clients/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
