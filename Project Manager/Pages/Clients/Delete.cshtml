@page
@model Project_Manager.Pages.Clients.DeleteModel
@{
    ViewData["Title"] = "Delete Client";
}

<h1 class="mb-4">Delete Client</h1>

@if (Model.Client != null)
{
    <div class="alert alert-warning">
        <strong>Warning:</strong> This action cannot be undone.<br />
        Are you sure you want to delete the following client?
    </div>

    <div class="border rounded p-3 mb-3 bg-light">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.Client.Fname @Model.Client.Lname</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Client.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Client.PhoneNum</dd>

            <dt class="col-sm-3">Company</dt>
            <dd class="col-sm-9">@Model.Client.Company</dd>
        </dl>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Yes, Delete
            </button>
            <a asp-page="/Clients/Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger">Client not found.</div>
}
