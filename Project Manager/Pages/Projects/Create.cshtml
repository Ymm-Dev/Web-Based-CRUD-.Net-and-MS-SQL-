@page
@model Project_Manager.Pages.Projects.CreateModel
@{
    ViewData["Title"] = "Create Project";
}

<link rel="stylesheet" href="~/css/Projects/create.css" />

<div class="container mt-4">
    <h2 class="mb-4">Create New Project</h2>

    <form method="post" class="row g-3" novalidate>
        <div class="col-md-6">
            <label asp-for="Project.Title" class="form-label">Project Title</label>
            <input asp-for="Project.Title" class="form-control" required />
            <span asp-validation-for="Project.Title" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Project.ClientId" class="form-label">Client</label>
            <select asp-for="Project.ClientId" asp-items="Model.Clients" class="form-select" required>
                <option value="">-- Select Client --</option>
            </select>
            <span asp-validation-for="Project.ClientId" class="text-danger small"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="Project.Description" class="form-label">Description</label>
            <textarea asp-for="Project.Description" class="form-control"></textarea>
            <span asp-validation-for="Project.Description" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Project.StartDate" class="form-label">Start Date</label>
            <input asp-for="Project.StartDate" type="date" class="form-control" />
            <span asp-validation-for="Project.StartDate" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Project.Deadline" class="form-label">Deadline</label>
            <input asp-for="Project.Deadline" type="date" class="form-control" />
            <span asp-validation-for="Project.Deadline" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Project.Status" class="form-label">Status</label>
            <select asp-for="Project.Status" class="form-select" required>
                <option value="">-- Select Status --</option>
                <option value="Pending">Pending</option>
                <option value="Started">Started</option>
                <option value="On Hold">On Hold</option>
                <option value="Finished">Finished</option>
                <option value="Cancelled">Cancelled</option>
            </select>
            <span asp-validation-for="Project.Status" class="text-danger small"></span>
        </div>

        <div class="col-12 d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-success">Create Project</button>
            <a asp-page="/Projects/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
