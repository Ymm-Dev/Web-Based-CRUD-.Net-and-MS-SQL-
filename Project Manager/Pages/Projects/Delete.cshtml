@page "{id:int}"
@model Project_Manager.Pages.Projects.DeleteModel
@{
    ViewData["Title"] = "Delete Project";
}

<h1 class="mb-4">Delete Project</h1>

@if (Model.Project != null)
{
    <div class="alert alert-warning">
        <strong>Warning:</strong> This action cannot be undone.<br />
        Are you sure you want to delete the project <strong>@Model.Project.Title</strong>?
    </div>

    <div class="border rounded p-3 mb-3 bg-light">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Project.Title</dd>

            <dt class="col-sm-3">Client</dt>
            <dd class="col-sm-9">@Model.Project.ClientName</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Project.Status</dd>
        </dl>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Project.Id" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Yes, Delete
            </button>
            <a asp-page="/Projects/Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger">Project not found.</div>
}
